<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;1,100;1,200&family=Roboto:wght@100&family=Ropa+Sans:ital@0;1&family=Source+Sans+Pro:ital,wght@0,200;0,300;1,200&display=swap" rel="stylesheet">
    <!-- General styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/styles.css">
    <!-- Unique styles -->
    <link rel="stylesheet" href="../public/css/viewForm.styles.css">
    <title>Pollin App - Ver Formulario</title>
</head>
<body>
    <body>
        <div class="container">
            <div class="row justify-content-center">        
                <div class="col col-12 text-center viewFormTitle">Ver Formulario</div>
                <div class="col col-sm-12 col-md-12 col-lg-12 contentViewForm">
                    <% if(form!=null) {%>
                        <div class="row formHeader">
                            <div class="col-8 mb-3 formTitle">Cuestionario <%= form.title %></div>
                            <div class="col-10 mb-3">
                                <textarea name="formDescription" class="form-control formDescription disableFields" cols="20" rows="5"><%= form.description %></textarea>
                            </div>
                        </div>
                        <div class="row formBody">
                            <% for(let indexSeccion = 0; indexSeccion < form.body.length; indexSeccion++){ %>
                                <div class="col-12 seccion">
                                    <div class="row">
                                        <div class="row">
                                            <div class="col-12 seccionName"><%= form.body[indexSeccion].seccionName %></div>
                                        </div>
                                        <div class="col-11 mb-3">
                                            <textarea name="seccionDescription" class="form-control seccionDescription" cols="20" rows="5"><%= form.body[indexSeccion].seccionDescription %></textarea>
                                        </div>
                                    </div>
                                    <% for(let indexOption = 0; indexOption < form.body[indexSeccion].options.length; indexOption++) { %>
                                        <% switch (form.body[indexSeccion].options[indexOption].typeOption) { 
                                                case "text": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/input.png" alt="input" style="width:40px; height:40px">
                                                        Input Text
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <%= form.body[indexSeccion].options[indexOption].optionName %>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;
                                                case "email": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/input.png" alt="input" style="width:40px; height:40px">
                                                        Input Email
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <%= form.body[indexSeccion].options[indexOption].optionName %>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;
                                                case "number": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/input.png" alt="input" style="width:40px; height:40px">
                                                        Input Number
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <%= form.body[indexSeccion].options[indexOption].optionName %>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;
                                                case "range": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/range.png" alt="input" style="width:40px; height:40px">
                                                        Input Range
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <div class="question"><%= form.body[indexSeccion].options[indexOption].optionName %></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;
                                                case "radioButton": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/radioButton.png" alt="input" style="width:40px; height:40px">
                                                        Radio Button
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <div class="col"><%= form.body[indexSeccion].options[indexOption].optionName %></div>
                                                        <div class="row">
                                                            <% let answersRB = form.body[indexSeccion].options[indexOption].answers.split(";"); 
                                                            for(let ans = 0; ans < answersRB.length; ans++){ %>
                                                                <div class="radioOptions"><%= answersRB[ans] %></div>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;
                                                case "selectItems": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/selects.png" alt="input" style="width:40px; height:40px">
                                                        Select Item
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <div class="col"><%= form.body[indexSeccion].options[indexOption].optionName %></div>
                                                        <div class="row">
                                                            <% let answersSI = form.body[indexSeccion].options[indexOption].answers.split(";"); 
                                                            for(let ansSI = 0; ansSI < answersSI.length; ansSI++){ %>
                                                                <div class="selectOptions"><%= answersSI[ansSI] %></div>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;
                                                case "g-rango": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/options.png" alt="input" style="width:40px; height:40px">
                                                        General Input Range
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <div class="col"><%= form.body[indexSeccion].options[indexOption].optionName %></div>
                                                        <div class="row">
                                                            <% let answers_gIR = form.body[indexSeccion].options[indexOption].answers.split(";"); 
                                                            for(let ans_gIR = 0; ans_gIR < answers_gIR.length; ans_gIR++){ %>
                                                                <div class="generalOptions_multiInput">
                                                                    <div class=""><img src="../public/images/icons/range.png" alt="" style="width:40px; height:40px">Input Range</div>
                                                                    <div><%= answers_gIR[ans_gIR] %></div>
                                                                </div>
                                                            <% } %>
                                                            <div class="generalOptions_multiInput">
                                                                <div class=""><img src="../public/images/icons/input.png" alt="" style="width:40px; height:40px">Text</div>
                                                                <div>Otro</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;
                                                case "g-radios": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/options.png" alt="input" style="width:40px; height:40px">
                                                        General Radio Buttons
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <div class="col"><%= form.body[indexSeccion].options[indexOption].optionName %></div>
                                                        <div class="row">
                                                            <% let answers_gRB = form.body[indexSeccion].options[indexOption].answers.split(";"); 
                                                            for(let ans_gRB = 0; ans_gRB < answers_gRB.length; ans_gRB++){ %>
                                                                <div class="generalOptions_multiInput">
                                                                    <div class=""><img src="../public/images/icons/radioButton.png" alt="" style="width:40px; height:40px">Radio Button</div>
                                                                    <div><%= answers_gRB[ans_gRB] %></div>
                                                                </div>
                                                            <% } %>
                                                            <div class="generalOptions_multiInput">
                                                                <div class=""><img src="../public/images/icons/input.png" alt="" style="width:40px; height:40px">Text</div>
                                                                <div>Otro</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;
                                                case "g-items": %>
                                            <!-- html -->
                                            <div class="col col-10">
                                                <div class="row option">
                                                    <div class="col col-10 optionHeader">
                                                        <img src="../public/images/icons/options.png" alt="input" style="width:40px; height:40px">
                                                        General Select Items
                                                    </div>
                                                    <div class="col col-12 optionBody">
                                                        <div class="col"><%= form.body[indexSeccion].options[indexOption].optionName %></div>
                                                        <div class="row">
                                                            <% let answers_gSI = form.body[indexSeccion].options[indexOption].answers.split(";"); 
                                                            for(let ans_gSI = 0; ans_gSI < answers_gSI.length; ans_gSI++){ %>
                                                                <div class="generalOptions_multiInput">
                                                                    <div class=""><img src="../public/images/icons/selects.png" alt="" style="width:40px; height:40px">Select Item</div>
                                                                    <div><%= answers_gSI[ans_gSI] %></div>
                                                                </div>
                                                            <% } %>
                                                            <div class="generalOptions_multiInput">
                                                                <div class=""><img src="../public/images/icons/input.png" alt="" style="width:40px; height:40px">Text</div>
                                                                <div>Otro</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% break;%>
                                        <% } %>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                    <%} else {%>
                        <div class="col-8 mb-3 formTitle">No hay formulario por mostrar</div>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>