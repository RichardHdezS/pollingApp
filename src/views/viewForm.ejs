<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;1,100;1,200&family=Roboto:wght@100&family=Ropa+Sans:ital@0;1&family=Source+Sans+Pro:ital,wght@0,200;0,300;1,200&display=swap" rel="stylesheet">
    <!-- General styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/styles.css">
    <!-- Unique styles -->
    <link rel="stylesheet" href="../public/css/viewForm.styles.css">
    <title>Pollin App - Ver Formulario</title>
</head>
<body>
    <body>
        <div class="container">
            <div class="row justify-content-center">        
                <div class="col col-12 text-center viewFormTitle">Ver Formulario</div>
                <div class="col col-sm-12 col-md-12 col-lg-12 contentViewForm">
                    <% if(form!=null) {%>
                        <div class="row formHeader">
                            <div class="col-8 mb-3 formTitle">Cuestionario <%= form.title %></div>
                            <div class="col-10 mb-3">
                                <textarea name="formDescription" class="form-control formDescription disableFields" cols="20" rows="5"><%= form.description %></textarea>
                            </div>
                        </div>
                        <div class="row formBody">
                            <% for(let indexSeccion = 0; indexSeccion < form.body.length; indexSeccion++){ %>
                                <div class="col-12 seccion">
                                    <div class="row">
                                        <div class="row">
                                            <div class="col-12 seccionName"><%= form.body[indexSeccion].seccionName %></div>
                                        </div>
                                        <div class="col-11 mb-3">
                                            <textarea name="seccionDescription" class="form-control seccionDescription" cols="20" rows="5"><%= form.body[indexSeccion].seccionDescription %></textarea>
                                        </div>
                                    </div>
                                    <% for(let indexOption = 0; indexOption < form.body[indexSeccion].options.length; indexOption++) { %>
                                        <% switch (form.body[indexSeccion].options[indexOption].typeOption) { 
                                                case "text": %>
                                                <h1>1</h1>
                                            <!-- html -->
                                            <% break;
                                                case "email": %>
                                                <h1>2</h1>
                                            <!-- html -->
                                            <% break;
                                                case "number": %>
                                                <h1>3</h1>
                                            <!-- html -->
                                            <% break;
                                                case "range": %>
                                                <h1>4</h1>
                                            <!-- html -->
                                            <% break;
                                                case "radioButton": %>
                                                <h1>5</h1>
                                            <!-- html -->
                                            <% break;
                                                case "selectItems": %>
                                                <h1>6</h1>
                                            <!-- html -->
                                            <% break;
                                                case "g-rango": %>
                                                <h1>7</h1>
                                            <!-- html -->
                                            <% break;
                                                case "g-radios": %>
                                                <h1>8</h1>
                                            <!-- html -->
                                            <% break;
                                                case "g-items": %>
                                                <h1>9</h1>
                                            <!-- html -->
                                            <% break;%>
                                        <% } %>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                    <%} else {%>
                        <div class="col-8 mb-3 formTitle">No hay formulario por mostrar</div>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>